<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>indi.xezzon</groupId>
  <artifactId>tao-parent</artifactId>
  <version>0.7.0</version>
  <packaging>pom</packaging>

  <name>tao</name>
  <description>软件开发管理平台</description>
  <scm>
    <url>https://e.coding.net/xezzo/tao/tao-spring-boot-starter.git</url>
  </scm>

  <modules>
    <module>tao-core</module>
    <module>tao-spring-boot-starter</module>
  </modules>

  <properties>
    <revision>1.0-SNAPSHOT</revision>
    <maven.compiler.source>17</maven.compiler.source>
    <maven.compiler.target>17</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!--依赖版本-->
    <spring-boot.version>2.6.8</spring-boot.version>
    <spring-cloud.version>2021.0.1</spring-cloud.version>
    <hutool.version>5.8.2</hutool.version>
    <jetbrains-annotation.version>23.0.0</jetbrains-annotation.version>
    <antlr.version>4.11.1</antlr.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!--二方库-->
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>tao-core</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>tao-spring-boot-starter</artifactId>
        <version>${project.version}</version>
      </dependency>
      <!--工具类-->
      <dependency>
        <groupId>cn.hutool</groupId>
        <artifactId>hutool-bom</artifactId>
        <version>5.8.2</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.jetbrains</groupId>
        <artifactId>annotations</artifactId>
        <version>${jetbrains-annotation.version}</version>
      </dependency>
      <dependency>
        <groupId>org.antlr</groupId>
        <artifactId>antlr4-runtime</artifactId>
        <version>${antlr.version}</version>
      </dependency>
      <!-- SpringBoot 相关依赖 必须放在最后 -->
      <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-dependencies</artifactId>
        <version>${spring-boot.version}</version>
        <scope>import</scope>
        <type>pom</type>
      </dependency>
      <dependency>
        <groupId>org.springframework.cloud</groupId>
        <artifactId>spring-cloud-dependencies</artifactId>
        <version>${spring-cloud.version}</version>
        <scope>import</scope>
        <type>pom</type>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.antlr</groupId>
          <artifactId>antlr4-maven-plugin</artifactId>
          <version>${antlr.version}</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <distributionManagement>
    <snapshotRepository>
      <id>coding</id>
      <name>coding</name>
      <url>https://xezzo-maven.pkg.coding.net/repository/tao/central/</url>
    </snapshotRepository>
    <repository>
      <id>github</id>
      <name>github</name>
      <url>https://maven.pkg.github.com/xezzon/tao-spring-boot-starter</url>
    </repository>
  </distributionManagement>
</project>